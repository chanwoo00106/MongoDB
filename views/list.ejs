<!doctype html>
<html lang="ko">

<head>
    <%- include('head.html') %>

    <title>test</title>
</head>

<body>
    
    <%- include('nav.html') %>

    <h4 class="ml-2 my-3 text-center">리스트 검색</h4>

    <div class="container input-group mb-2">
        <input id="search-input" type="text" class="form-control">
        <button id="search" class="input-group-append btn btn-danger">검색</button>
    </div>

    <div class="container">
        <h3 class="ml-2 my-3">Blog list</h3>
        <ul class="list-group" style="gap: 5px;">
            <% posts.forEach((x)=> { %>
            <li class="list-group-item">
                <h4><a href="/detail/<%= x._id %>"><%= x.title %></a></h4>
                <p><%= x.date %></p>
            </li>
            <% }); %>
        </ul>
    </div>

    <script src="https://code.jquery.com/jquery-latest.min.js"></script>

    <script>
        $('#search').click(function(){
            var input = $('#search-input').val();
            window.location.replace(`/list?search=${input}`);
        })
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous"></script>
</body>

</html>