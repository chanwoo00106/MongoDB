<!doctype html>
<html lang="ko">

<head>
    <%- include('head.html') %>
    <title>Write</title>
</head>

<body>
    <%- include('nav.html') %>

    <div class="container" style="margin-top: 5%;">
        <h4>ToDo 수정</h4>
        <form action="/edit?_method=PUT" method="POST">
            <input type="text" name="id" style="display: none;" value="<%= posts._id %>">
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">할일</span>
                <input type="text" class="form-control" name="title" value="<%= posts.title %>">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Due date</span>
                <input type="text" class="form-control" name="date" value="<%= posts.date %>">
            </div>
            <button type="submit" class="btn btn-danger">Submit</button>
        </form>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous"></script>
</body>

</html>